% if (ref $gallery eq 'ARRAY') {
<div class="fotorama-container">
    <div class="fotorama" data-width="680">
     	% foreach my $img (@$gallery) {
     		<a href="<%= $img_url.$img->{tag} %>">
     			<img src="<%= $img_url.$img->{tag} " alt="<%= $img->{descr} %>">
     		</a>
     	% }
    </div>
</div>
% }