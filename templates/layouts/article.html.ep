<!DOCTYPE HTML>
<html lang="ru-RU" xmlns:fb="http://ogp.me/ns/fb#">
	<head>
		<meta charset='utf-8' />
		<title><%= title %></title>
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />

		<link rel="dns-prefetch" href="//ajax.googleapis.com">
		<link rel="dns-prefetch" href="//cdnjs.cloudflare.com">

		<meta property="fb:admins" content="272601979547946" />
		<meta itemprop="datePublished" content="<%= stash('date_published') %>">

		<meta property="og:site_name" content="Barista Shop" />
		<meta property="og:type" content="article" />
		<meta property="og:title" content="<%= $title %>" />
		<meta property="og:url" content="<%== stash('host') . '/' . stash('type') . '/' . $alias %>" />
		<meta property="og:description" content="<%= stash 'preview_text' %>" />
		% if (stash 'preview_image') {
			<meta property="og:image" content="<%== $host . config->{image_url} . join '/', $type, $alias, stash 'preview_image' %>" />
		% }

		<link rel='stylesheet' type='text/css' href='/css/style.css?ver=2' media='all' />
		<link rel='stylesheet' type='text/css' href='/css/fotorama.css' media='all' />

		<script data-main='/j/config' src='/j/require.js'></script>
		<script>requirejs(['app/global', 'app/fotorama'])</script>
	</head>

	<body>
        <div class='wrap clearfloat'>

            %= include 'includes/header'
            %= include 'includes/top'
            <%= content %>

        </div>

		%= include 'includes/footer'

        <script type="text/javascript" src="//yandex.st/share/share.js" charset="utf-8"></script>
        %= include 'includes/google_analytics'
        %# = include 'includes/yandex_metrika'
	</body>
</html>
