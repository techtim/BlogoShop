% layout 'article';
% title $name.': МегаФон Спорт'.($cut ? " $cuts_alias->{$cut}" : '');

<div id='content' class='clearfloat article'>
	<div class='back clearfloat'>
		<div class='wrap'>
			<div class="col-main">

				<div class="article-header">
					<h1><%== stash 'name' %></h1>
				</div>
				<!-- /article_header -->

				<div class="article-body">

					<p class="metadata">
						% if (ref $author_info eq 'HASH') {
							<img src="/i/content/author-icon.png" class="author-icon"/>
							<span class="name"><%== $author_info->{name} %></span><span>, </span>
						% }
						% if (ref $source_info eq 'HASH') {
							<span class="name"><%== $source_info->{name} %></span><span>, </span>
						% }
						<span href="#" class="timestamp"><%== stash 'date' %></span>
					</p>

					<p class="article-lead-text bold-and-violet"><%== stash 'preview_text' %></p>
					<!-- lead-for-twitter -->

					<div class="article-text"><%== stash 'article_text' %></div>
					<!-- /article-text -->
				</div>
				<!-- /atricle_body -->

				<div class="sharing-tools">
				  <p>
					<!-- NB: скрипт в шаблоне layouts/article.html.ep -->
					<div class="yashare-auto-init"
						data-yashareL10n="ru"
						data-yashareType="link"
						data-yashareQuickServices="vkontakte,facebook,twitter,odnoklassniki,yaru,moimir,lj">
					</div>

				  </p>
				</div>
				<!-- /sharing_tools -->

				<div class="comments" id="comments">

					<h3 class="bold-and-violet section-header">Комментарии:</h3>

                    %= include 'includes/fanat_com_drop_point_anchor'				                       				   
				   				    
				</div>
				<!-- /comments -->

			</div>
			<!-- /main_content -->

			<div class="col-sidebar">

				<div class="megafon-articles sidebar-section sidebar-section-first">
					<div class="sidebar-section-wrapper">
						<ul class="link-list">
							<li><a href="<%= $host %>/sochi2014/activities">Большие игры МегаФона</a></li>
							<li><a href="http://moscow.megafon.ru/services/joy/video_portal.html">Трансляции матчей КХЛ в твоем мобильном</a></li>
							<li><a href="<%= $host %>/activities/flagmanskij_salon_megafon_v_gume">Флагманский салон МегаФона в ГУМе</a></li>
						</ul>
					</div>
				</div>

				<div class="banners sidebar-section">
					<div class="sidebar-section-wrapper">
						<p class="title"><span class="shifted-up">Реклама</span></p>
						<div class="banner">
							<!--AdFox START-->
								<script type="text/javascript">
								<!--
								if (typeof(pr) == 'undefined') { var pr = Math.floor(Math.random() * 1000000); }
