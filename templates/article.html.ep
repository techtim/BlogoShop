						</div>
					</div>
				</div>

			% if (ref $related_articles eq 'ARRAY') {
				<div class="related-articles sidebar-section sidebar-section-last">
				    <div class="sidebar-section-wrapper">
					<h3 class="bold-and-violet">Читайте далее:</h3>
					<ul>
			% 	foreach my $article (@$related_articles) {
			% 	next if !$article->{alias};
						<li>
							<a class="article-link" href="/<%== ($article->{cut} ? "$article->{cut}/" : '') . join '/', $article->{rubric}, $article->{alias} %>"><%= $article->{name} %></a><span class="timestamp"><%= $article->{date} ? ' '.$article->{date} : '' %></span>
						</li>
			% 	}
					</ul>
				    </div>
				</div>
			% }

			</div>
			<!-- /sidebar-right -->

			<div class="clearfloat"></div>
		</div>
	</div>
</div>